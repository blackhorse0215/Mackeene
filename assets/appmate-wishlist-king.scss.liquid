    color: #fff !important;
} */

.wishlist-collection .wk-item .wk-product-options select[disabled] {
    background-image: none;
    background-color: #fff;
    border-color: transparent;
    color: #eee;
    background-color: transparent;
}

.wishlist-collection .size_quantity .size_quantity_dropdown .wk-selector-wrapper select {
    margin-left: 0;
}

.wishlist-collection .wk-item .wk-product-options select {
    margin-bottom: 0;
    border-color: #eaeaea;
    text-align: center;
    text-align-last: center;
    padding-top: 8px;
    padding-bottom: 8px;
}

.wishlist-collection .item_totle_quantity {
    text-align: right;
    color: #000;
}

.wishlist-collection .item_totle_quantity span {
    width: 40px;
    display: inline-block;
    color: #649b71;
}

.wishlist-collection .wk_continue {
    text-align: right;
    border-top: 1px solid #d2d2d2;
    padding-top: 25px;
  	margin: 0 0 100px 0;
}

.wishlist-collection .wishlist_total_items span, .wishlist-collection .wishlist_subtotle span {
    width: 205px;
    display: inline-block;
    font-style: normal;
    color: #649b71;
}

.wishlist-collection .wishlist_total_items, .wishlist-collection .wishlist_subtotle {
    margin-bottom: 10px;
    line-height: 1em;
}

.wishlist-collection .wk_continue .btn {
    float: right;
    clear: both;
}

.wk_continue .btn {
    display: block;
    width: 100%;
    max-width: 215px;
    margin: 0 auto;
    margin-bottom: 10px;
}

.wishlist-collection .wk_continue .btn{
	color: #FFFFFF;
  	text-transform: uppercase;
    font-size: calc(var(--base-text-font-size) - (var(--default-text-font-size) - 12px));
    text-align: center;
    letter-spacing: 0.2em;
    font-family: var(--heading-font-family);
    font-weight: var(--heading-font-weight);
    font-style: var(--heading-font-style);
}

.wishlist-collection .wishlist_total_items span.dis_price, .wishlist-collection .wishlist_subtotle span.dis_price{
	width:auto;
  	margin-right:7px;
  	display:none !important;
}
.wishlist-collection .wishlist_total_items span, .wishlist-collection .wishlist_subtotle span{
  	width: 90px;
    color: #000000;
    font-size: 14px;
  }
.wishlist-collection .wishlist_subtotle {
  margin-bottom: 20px;
}

@media (max-width: 480px){
  .wishlist-collection .wk_image_custom{
  	width:50%;
  }
  .wishlist-collection .wk_image_content{
  	padding:0;
    width:105%;
  }
  .wishlist-collection .wk-product-title{
  	padding:0;
  }
  .wishlist-collection .wk_image_content .wk-purchase{
  	padding:0;
  }
  .wishlist-collection .wk-item .wk-product-options select{
  	text-align: auto;
    text-align-last: auto;
  }
  .wishlist-collection .wk_image_content{
  	text-align: center;
  }
  .wishlist-collection .item_totle_quantity{
  	text-align: center;
    padding-top: 20px;
  }
  
  .wishlist-collection .wk_continue .btn{
  	max-width: 100%;
  }
  .wishlist-collection .swatch .header{
  	width: 60px;
  }
  .wishlist-collection .size_quantity .header{
  	width: 60px;
  }
  .wishlist-collection .swatch .swatch-option{
  	width: calc(100% - 85px);
  }
  .wishlist-collection .size_quantity .size_quantity_dropdown{
  	width: calc(100% - 85px);
  }
  .wishlist-collection .wk-item .wk-image .wk-variant-link{
  	padding-bottom: 20px;
  }

}

@media (min-width: 768px){
  .wishlist-collection .wk_image_content .wk-purchase{
  	float: right;
    width: 80%;
    padding-left: 0px !important;
  }
  .wishlist-collection .wk-product-title{
  	float: right;
    width: 80%;
    margin-top: 20px;
    padding-left: 0px;
  }
  .wishlist-collection .wk-add-item-form{
  	width: 80%;
    float: right;
    margin-top: -60px;
    padding-left: 0px;
  }
  .wishlist-collection .swatch .header{
  	width: auto;
  }
  .wishlist-collection .size_quantity .header{
  	width: auto;
  }
