.wishlist-collection .swatch {
    margin-bottom: 10px;
    margin-top: 0;
    display: flex;
}

.wishlist-collection .swatch .header {
    width: 80px;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    float: left;
    margin: 0;
}

.wishlist-collection .swatch .swatch-option {
    width: calc(100% - 40px);
    display: flex;
    align-items: center;
    justify-content: flex-start;
    float: left;
}

.wishlist-collection .swatch .swatch-element {
    margin: 0;
    padding-left: 10px;
    flex: 1 1 100px;
}

.wishlist-collection .swatch .swatch-element.soldout label {
    border-color: transparent;
    background: url(//cdn.shopify.com/s/files/1/1738/6295/t/47/assets/disabled-bg-img_small.png?v=3619138743221998299) center center no-repeat;
    background-size: auto 100%;
}

.wishlist-collection .swatch .swatch-element label {
    border-color: #d2d2d2;
    width: 100%;
  	font-family: var(--heading-font-family);
    font-weight: var(--heading-font-weight);
    font-style: var(--heading-font-style);
    letter-spacing: 0.2em;
    text-transform: uppercase;
    font-size: calc(var(--base-text-font-size) - (var(--default-text-font-size) - 11px));
}

.wishlist-collection .size_quantity {
    display: flex;
    margin-bottom: 10px;
}

.wishlist-collection .size_quantity .header {
    width: 80px;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.wishlist-collection .size_quantity .size_quantity_dropdown {
    width: calc(100% - 40px);
    display: flex;
    align-items: center;
    justify-content: flex-start;
    float: left;
}

.wishlist-collection .size_quantity .size_quantity_dropdown .wk-selector-wrapper {
    padding-left: 10px;
    flex: 1 1 100px;
}

.wishlist-collection .size_quantity .size_quantity_dropdown .wk-selector-wrapper select.color_white[disabled] {
    color: #eee !important;
  cursor:default;
}

